<!doctype html><html><head><title>text animation</title>

<style type="text/css" id="dcoder_stylesheet">* {
	padding: 0;
	margin: 0;
	font-family: sans-serif;
}
body {
	background: #333;
} 
.container {
	text-align: center;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: 100%;
}
.container span {
	text-transform: uppercase;
	display: block;
}
.text1 {
	font-size: 60px;
	font-weight:700;
	letter-spaching: 8px;
	margin-bottom: 20px;
	background: #333;
	position: relative;
	animation: text 5s 1;
	color: #fff;
}
.text2 {
	font-size: 30px;
	color: #7d5fff;
}

@keyframes text {
	0% {
		color: black;
		margin-bottom: -40px;
	}
	30% {
		letter-spaching: 25px;
		margin-bottom: -40px;
	}
	85% {
		letter-spaching: 8px;
		margin-bottom: -40px;
	}
}</style></head><body>

  <div class="container">
  
  <span class="text1">Hello World</span>
  <span class="text2">Welcome to my blog</span>
  
  
  
  </div>







    </body></html>